<Window x:Class="HospitalIntegrationApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:HospitalIntegrationApp.Controls"
        Title="Hastane Entegrasyon Sistemi - Giriş" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource SurfaceAltBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:HeaderControl Grid.Row="0" Title="Hastane Entegrasyon Sistemi"/>

        <!-- LOGIN FORM -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="20">
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Kullanıcı Girişi" FontSize="16" FontWeight="SemiBold" 
                          Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Kullanıcı Adı:" Margin="0,0,0,5"/>
                <TextBox Name="txtUsername" Height="40" Margin="0,0,0,15" 
                        Padding="10,8" FontSize="13"
                        Background="White" 
                        BorderBrush="{StaticResource BorderBrushColor}"
                        BorderThickness="1"/>

                <TextBlock Text="Şifre:" Margin="0,0,0,5"/>
                <PasswordBox Name="txtPassword" Height="40" Margin="0,0,0,20" 
                            Padding="10,8" FontSize="13"
                            Background="White" 
                            BorderBrush="{StaticResource BorderBrushColor}"
                            BorderThickness="1"/>

               

                <Button Name="btnLogin" Content="Giriş Yap" Height="45" Width="200"
                       Click="BtnLogin_Click" FontSize="14" FontWeight="SemiBold"
                       Style="{StaticResource PrimaryButton}"
                       Padding="20,10"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- STATUS -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Giriş yapmak için bilgilerinizi giriniz" 
                          Foreground="{StaticResource TextSecondaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
