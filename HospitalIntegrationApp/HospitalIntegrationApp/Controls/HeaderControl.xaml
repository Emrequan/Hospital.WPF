<UserControl x:Class="HospitalIntegrationApp.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
        <TextBlock Text="{Binding Title, ElementName=root}" 
                   Foreground="White" FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>
    </Border>
</UserControl>






