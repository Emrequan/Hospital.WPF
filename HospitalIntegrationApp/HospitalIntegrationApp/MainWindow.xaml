<Window x:Class="HospitalIntegrationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:HospitalIntegrationApp.Controls"
        Title="Hastane Entegrasyon Sistemi" Height="640" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceAltBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <controls:HeaderControl Grid.Row="0" Title="Hastane Entegrasyon Sistemi"/>

        <!-- ACTIONS TOOLBAR -->
        <Border Grid.Row="1" Style="{StaticResource Card}">

            <StackPanel Orientation="Horizontal">
                <ComboBox Width="220" Height="36" SelectedIndex="0"
          Foreground="black" Background="black" BorderThickness="0" SelectionChanged="ComboBox_SelectionChanged">

                    <ComboBox.ItemTemplate>
                        
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="6,0">
                                <Image Width="18" Height="18" Stretch="Uniform" Margin="0,0,8,0"
                                       Source="{Binding Tag, Converter={StaticResource TagToImageConverter}}"/>
                                <TextBlock Text="{Binding Content}" Foreground="black"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    


                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal" Margin="6,0">
                            <TextBlock Text="Devlet" Foreground="black"/>
                            <Image Source="/Images/D.png" Width="18" Margin="0,0,8,0"/>
                            
                        </StackPanel>
                    </ComboBoxItem>


                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal" Margin="6,0">
                            <Image Source="/Images/v.png" Width="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Vakıf" Foreground="black"/>
                        </StackPanel>
                    </ComboBoxItem>


                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal" Margin="6,0">
                            <Image Source="/Images/t.png" Width="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Tümhastaneler" Foreground="black"/>
                        </StackPanel>
                    </ComboBoxItem>


                </ComboBox>


                <Button Name="BtnGetir" Content="Hastaları Getir" Width="160" Click="BtnGetir_Click" Style="{StaticResource PrimaryButton}"/>
                <Button Name="BtnToMaster" Content="Master DB'ye Aktar" Width="170" Click="BtnToMaster_Click" Style="{StaticResource SecondaryButton}"/>
                <Button Name="BtnTemizle" Content="Temizle" Width="120" Click="BtnTemizle_Click" Style="{StaticResource PrimaryButton}"/>
                <Button Name="BtnCks" Content="Çıkış" Width="120" Click="BtnCks_Click" Style="{StaticResource PrimaryButton}"/>
            </StackPanel>

        </Border>

        <!-- DATA SURFACE -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="8">
            <DataGrid Name="dataGrid"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"/>
        </Border>

        <!-- STATUS BAR -->
        <StatusBar Grid.Row="3" Height="28">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Hazır" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>